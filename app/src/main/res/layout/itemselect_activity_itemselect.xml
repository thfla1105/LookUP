<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:theme="@style/AppTheme.NoActionBar"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="Login_Main.activity.LoginActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <com.google.android.material.navigation.NavigationView
        android:layout_height="750dp"
        android:layout_width="wrap_content"
        android:id= "@+id/nav_view"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/window_background"
            android:fontFamily="@font/baloo"
            android:minHeight="?attr/actionBarSize"
            android:text="LookUP"
            android:textColor="@color/black_de"
            android:theme="@style/AppTheme.NoActionBar"
            app:navigationIcon="@drawable/menuicon_ivory" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/baloo"
                    android:text="     Ewha CTRLS"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:text="  LookUP"
                    android:textSize="50sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="118dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="60dp"
                    app:srcCompat="@drawable/hanger" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/select2_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right|center_vertical"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/purpose_daily"
                    android:text="일상"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground"
                    android:layout_weight="1"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/select1_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal|left|center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/purpose_hangout"
                    android:text="친구 모임/데이트"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/select3_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_horizontal|center_vertical"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/purpose_workout"
                    android:text="운동"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground"
                    android:layout_weight="1"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/select4_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|left|center_vertical"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/purpose_formal"
                    android:text="직장/면접"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground"
                    android:layout_weight="1"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/select5_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_horizontal|center_vertical"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/purpose_parttime"
                    android:text="아르바이트"
                    android:textAlignment="inherit"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground"
                    android:layout_weight="1"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/select6_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|left|center_vertical"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/purpose_etc"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="기타"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground"
                    android:layout_weight="1"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>





