<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="styleList.routeActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <com.google.android.material.navigation.NavigationView
        android:layout_height="750dp"
        android:layout_width="wrap_content"
        android:id= "@+id/nav_view"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/window_background"
            android:fontFamily="@font/baloo"
            android:minHeight="?attr/actionBarSize"
            android:text="Closet"
            android:textColor="@color/black_de"
            android:theme="@style/AppTheme.NoActionBar"
            app:navigationIcon="@drawable/menuicon_ivory" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/baloo"
                    android:text="   "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:text="   StyleList Preference"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/casual_btn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom|right|center_vertical"
                    android:layout_margin="8dp"

                    android:text="Casual"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/sporty_btn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom|center_horizontal|left|center_vertical"
                    android:layout_margin="8dp"


                    android:text="Sporty"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/formal_btn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="right|center_horizontal|center_vertical"
                    android:layout_margin="10dp"

                    android:text="Formal"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/feminine_btn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal|left|center_vertical"
                    android:layout_margin="10dp"

                    android:text="Feminine"
                    android:textColor="#505050"
                    app:backgroundTint="#45EACD76"
                    app:rippleColor="@color/bg_row_foreground" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>